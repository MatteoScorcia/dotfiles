[user]
	name = matteoscorcia
    email = matteoscorcia@gmail.com

[core]
	editor = nvim
	autocrlf = input

[color]
	ui = true

[init]
    defaultBranch = main

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[include]
	path = .config/delta/themes/catppuccin.gitconfig

[delta]
    navigate = true
    dark = true
	features = catppuccin-macchiato side-by-side

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --oneline
